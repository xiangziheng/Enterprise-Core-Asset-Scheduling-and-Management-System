<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.asset.management.mapper.CategoryMapper">
    
    <resultMap id="BaseResultMap" type="com.asset.management.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
    </resultMap>
    
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM t_category ORDER BY id DESC
    </select>
    
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM t_category WHERE id = #{id}
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_category (name, description)
        VALUES (#{name}, #{description})
    </insert>
    
    <update id="update">
        UPDATE t_category
        SET name = #{name},
            description = #{description}
        WHERE id = #{id}
    </update>
    
    <delete id="deleteById">
        DELETE FROM t_category WHERE id = #{id}
    </delete>
    
</mapper>

